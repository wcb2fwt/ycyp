/* ************************************************************************** */

.splashLoading {
  position: absolute;
}

.splashLoading:before {
  position: absolute;
  content: "";
  width: 100%;  
  min-height: 100%;
  overflow: hidden;
  z-index: 2000;
  pointer-events: auto;
  background: rgba(0, 0, 0, 0.2) url('./img/splash.gif') 50% 50% no-repeat;
}

.txtLoading {
  margin-top: 2em;
  font-weight: bold;
  font-family: sans-serif;
  font-size: 2em;
  color: white;
  text-align: center;
}

/* ************************************************************************** */

.patient .patId {
  font-weight: bold;
}

.patient .male {
}

.patient .male:after {
  padding: 0 0.5em;
  content: url("img/icon_male_small.png");
